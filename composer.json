{
    "name": "cheppers/git-hooks",
    "description": "Provide a bridge between Git hooks and scripts under VCS.",
    "type": "git-hook",
    "license": "GPL-2.0",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {},
    "require-dev": {
        "behat/behat": "~3.1",
        "consolidation/robo": "dev-master#6af485e",
        "pear/archive_tar": "~1.4",
        "phpunit/phpunit": "~4.5",
        "squizlabs/php_codesniffer": "~2.6",
        "symfony/filesystem": "~3.1",
        "symfony/process": "~3.1"
    },
    "archive": {
        "exclude": [
            "/*",
            "/.*",
            "!/hooks/_common",
            "!/hooks/applypatch-msg",
            "!/hooks/commit-msg",
            "!/hooks/post-applypatch",
            "!/hooks/post-checkout",
            "!/hooks/post-commit",
            "!/hooks/post-merge",
            "!/hooks/post-receive",
            "!/hooks/post-rewrite",
            "!/hooks/post-update",
            "!/hooks/pre-applypatch",
            "!/hooks/pre-auto-gc",
            "!/hooks/pre-commit",
            "!/hooks/pre-push",
            "!/hooks/pre-rebase",
            "!/hooks/pre-receive",
            "!/hooks/prepare-commit-msg",
            "!/hooks/push-to-checkout",
            "!/hooks/update",
            "!/composer.json",
            "!/README.md"
        ]
    },
    "scripts": {
        "post-install-cmd": "robo deploy:git-hooks"
    }
}
