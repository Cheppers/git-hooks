{
    "name": "cheppers/git-hooks-robo",
    "description": "Provide a bridge between Git hooks and Robo tasks.",
    "type": "git-hook",
    "license": "GPL-2.0",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {},
    "require-dev": {
        "behat/behat": "^3.1",
        "codegyre/robo": "dev-master#a605efd",
        "symfony/filesystem": "^3.0",
        "symfony/process": "^3.0",
        "phpunit/phpunit": "~4.5"
    },
    "autoload-dev": {
        "psr-4": {
            "Cheppers\\": "src-dev"
        }
    },
    "archive": {
        "exclude": [
            "features/",
            "fixtures/",
            ".editorconfig",
            ".gitignore",
            "behat.yml"
        ]
    },
    "scripts": {
        "post-install-cmd": "robo deploy:git-hooks"
    }
}
