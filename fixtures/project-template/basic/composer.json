{
    "name": "cheppers/git-hooks-helper-project-basic",
    "description": "Helper project for cheppers/git-hooks",
    "license": "proprietary",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": {
        "local": {
            "type": "path",
            "url": "@see \\FeatureContext::doCreateProjectCache"
        }
    },
    "require": {
        "cheppers/git-hooks": "*"
    },
    "require-dev": {
        "codegyre/robo": "1.0.0-beta1",
        "symfony/event-dispatcher": "~3.0"
    },
    "scripts": {
        "post-install-cmd": [
            "@deploy-git-hooks"
        ],
        "deploy-git-hooks": "\\Cheppers\\GitHooks\\Main::deploy"
    }
}
